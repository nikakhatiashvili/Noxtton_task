<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coinsItemMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/GithubItemImageView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/white_eye"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/GithubItemSymbolTextView"
            app:layout_constraintTop_toBottomOf="@id/GithubDescriptionTextView"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/GithubItemNameTextView"
            style="@style/TextAppearance.Custom.Default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:textAlignment="center"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat"
            tools:text="pluralsight-projects/NodeExpress-BankingPortal" />

        <TextView
            android:id="@+id/GithubItemSymbolTextView"
            style="@style/TextAppearance.Custom.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:maxLength="100"
            android:maxLines="@integer/material_motion_duration_medium_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/GithubItemImageView"
            app:layout_constraintTop_toBottomOf="@id/GithubItemNameTextView"
            app:layout_constraintVertical_bias="1.0"
            tools:text="200" />


        <TextView
            android:id="@+id/GithubItemLangTextView"
            style="@style/TextAppearance.Custom.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:text="Lang:"
            android:textColor="@color/white"
            android:maxLength="100"
            android:maxLines="@integer/material_motion_duration_medium_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/GithubLangTextView"
            app:layout_constraintHorizontal_bias="0.181"
            app:layout_constraintStart_toEndOf="@id/GithubItemImageView"
            app:layout_constraintTop_toBottomOf="@id/GithubItemNameTextView"
            app:layout_constraintVertical_bias="1.0"
            tools:text="Lang:" />

        <TextView
            android:id="@+id/GithubLangTextView"
            style="@style/TextAppearance.Custom.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:maxLength="100"
            android:maxLines="@integer/material_motion_duration_medium_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/GithubItemLangTextView"
            app:layout_constraintTop_toBottomOf="@id/GithubItemNameTextView"
            app:layout_constraintVertical_bias="1.0"
            tools:text="Kotlin" />

        <TextView
            android:id="@+id/GithubDescriptionTextView"
            style="@style/TextAppearance.Custom.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:maxLength="100"
            android:textColor="@color/white"
            android:maxLines="@integer/material_motion_duration_medium_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.246"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/GithubItemNameTextView"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Anthos sample application for retail banking" />

        <TextView
            android:id="@+id/GithubUpdateTextView"
            style="@style/TextAppearance.Custom.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:textColor="@color/white"
            android:maxLines="@integer/material_motion_duration_medium_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toEndOf="@+id/GithubLangTextView"
            app:layout_constraintTop_toBottomOf="@+id/GithubDescriptionTextView"
            app:layout_constraintVertical_bias="1.0"
            tools:text="Updated on 2017-03-13" />

        <!--        <TextView-->
<!--            android:id="@+id/coinsItemPriceTextView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
